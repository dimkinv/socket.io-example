<!DOCTYPE html>
<!--suppress HtmlUnknownTarget -->
<html ng-app="chatApp">
<head>
    <title>Socket.IO Chat Example</title>
    <link href="/public/stylesheets/bootstrap.min.css" rel="stylesheet">
    <script src="/socket.io/socket.io.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script src="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.3.1/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.0.6/angular.min.js"></script>

    <script src="/public/javascripts/application.js"></script>
    <script type="text/javascript" src="/public/javascripts/controllers.js"></script>
    <style>
        .border {
            border-radius: 3px;
            border: 1px solid aqua;
        }

        .show-grid {
            margin-top: 10px;
            margin-bottom: 20px;
        }

        .field {
            margin-left: 10px;
        }
    </style>
</head>
<body>
<div ng-controller="chatController">
    <div class="container">
        <div class="span12">
            <div class="row show-grid">
                <div class="span3 border" style="height: 600px;">
                    <h3 class="alert text-center">Chat Users</h3>

                    <select style="height:500px; margin-left:50px" class="span2" size="2" ng-model="model.selectedUser"
                            ng-options="user for user in model.users"></select>
                </div>
                <div class="span8 border" style="height: 600px;">
                    <h3 class="alert text-center">Chat History</h3>
                    <ul class="unstyled">
                        <li ng-repeat="text in model.messageHistory">{{text}}</li>
                    </ul>
                </div>
            </div>
            <div class="row show-grid">
                <div class="span11 border" style="height:100px;">
                    <fieldset class="field form-inline">
                        <legend>Chat:</legend>
                        <div class="input-append">
                            <input type="text" class="span10" ng-model="model.message"/>
                            <button type="button" class="btn btn-primary" ng-click="events.send()">SEND</button>
                        </div>
                    </fieldset>
                </div>
            </div>
        </div>
    </div>

    <div class="modal hide" id="loginModal">
        <div class="modal-header">
            <button class="close" data-dismiss="modal">Ã—</button>
            <h3>Please Login</h3>
        </div>
        <div class="modal-body text-center">
            <input type="text" class="span5" ng-model="model.loginName"/>
        </div>
        <div class="modal-footer">
            <a data-dismiss="modal" class="btn btn-primary" ng-click="events.login()">Login</a>
        </div>
    </div>
</div>
</body>
</html>